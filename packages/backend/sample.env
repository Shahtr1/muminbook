# ================================
# SERVER CONFIGURATION
# ================================

# Environment: development, production, or test
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Backend URL (for keep-alive pings in production)
# Development: http://localhost:5000
# Production: https://your-backend.onrender.com
RENDER_BACKEND_URL=http://localhost:5000

# ================================
# FRONTEND CONFIGURATION
# ================================

# Frontend URL for CORS and email links
# Development: http://localhost:5173
# Production: https://yourdomain.com
APP_ORIGIN=http://localhost:5173

# ================================
# DATABASE CONFIGURATION
# ================================

# MongoDB connection string
# Local: mongodb://localhost:27017/muminbook
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/muminbook?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/muminbook

# ================================
# JWT (Authentication) SECRETS
# ================================

# Generate secure random strings:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Access token secret (used for short-lived tokens)
JWT_SECRET=your_super_secret_access_token_here_change_this_in_production

# Refresh token secret (used for long-lived tokens)
JWT_REFRESH_SECRET=your_super_secret_refresh_token_here_change_this_in_production

# Token expiration times (optional, defaults in code)
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# EMAIL SERVICE (RESEND)
# ================================

# Resend API key (get from https://resend.com/api-keys)
# Free tier: 100 emails/day, 3,000/month
RESEND_API_KEY=re_your_resend_api_key_here

# Verified sender email address
# Development: onboarding@resend.dev
# Production: noreply@yourdomain.com
EMAIL_SENDER=onboarding@resend.dev

# Email sender name (optional)
EMAIL_FROM_NAME=Muminbook

# ================================
# ADMIN USER (SEED DATA)
# ================================

# First admin user created on startup if not exists
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
ADMIN_DATE_OF_BIRTH=1990-01-01
ADMIN_GENDER=male
ADMIN_EMAIL=admin@muminbook.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ================================
# OPTIONAL CONFIGURATIONS
# ================================

# Rate limiting (requests per window)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
# SESSION_COOKIE_MAX_AGE=604800000

# File upload limits
# MAX_FILE_SIZE=5242880

# Logging level: error, warn, info, debug
# LOG_LEVEL=info
