{
  "name": "muminbook",
  "version": "1.0.0",
  "type": "module",
  "description": "A modern MERN-stack web application designed to serve as a community platform for Muslims",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@muminbook/shared\" \"npm run backend\" \"npm run frontend\"",
    "backend": "npm run backend --workspace=@muminbook/backend",
    "frontend": "npm run frontend --workspace=@muminbook/frontend",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=@muminbook/backend",
    "build:frontend": "npm run build --workspace=@muminbook/frontend",
    "start:backend": "npm run start --workspace=@muminbook/backend",
    "preview:frontend": "npm run preview --workspace=@muminbook/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "clean:install": "npm run clean && npm install",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=@muminbook/backend",
    "test:frontend": "npm run test --workspace=@muminbook/frontend",
    "test:shared": "npm run test --workspace=@muminbook/shared",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:ui": "npm run test:ui --workspace=@muminbook/frontend",
    "test:e2e": "playwright test",
    "postinstall": "npm run build --workspace=@muminbook/shared"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@playwright/test": "^1.58.2",
    "commitizen": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shahtr1/muminbook.git"
  },
  "overrides": {
    "@types/express": "4.17.21"
  },
  "keywords": [
    "mern",
    "muslim",
    "quran",
    "hadith",
    "community",
    "education"
  ],
  "author": "",
  "license": "ISC"
}
